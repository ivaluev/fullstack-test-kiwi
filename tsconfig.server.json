{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist/server",
    "rootDir": "src/server",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "koa", "koa-router"],
    // we want this, but atm there is so many error to fix
    "strictNullChecks": false,
  },
  "include": ["./src/server/**/*"]
}
